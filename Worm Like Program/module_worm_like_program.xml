<?xml version="1.0" encoding="UTF-8"?>
<project name="module_worm_like_program" default="compile.module.worm_like_program">
  <dirname property="module.worm_like_program.basedir" file="${ant.file.module_worm_like_program}"/>
  
  <property name="module.jdk.home.worm_like_program" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.worm_like_program" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.worm_like_program" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.worm_like_program" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="worm_like_program.output.dir" value="${module.worm_like_program.basedir}/out/production/Worm Like Program"/>
  <property name="worm_like_program.testoutput.dir" value="${module.worm_like_program.basedir}/out/test/Worm Like Program"/>
  
  <path id="worm_like_program.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="worm_like_program.module.production.classpath">
    <path refid="${module.jdk.classpath.worm_like_program}"/>
  </path>
  
  <path id="worm_like_program.runtime.production.module.classpath">
    <pathelement location="${worm_like_program.output.dir}"/>
  </path>
  
  <path id="worm_like_program.module.classpath">
    <path refid="${module.jdk.classpath.worm_like_program}"/>
    <pathelement location="${worm_like_program.output.dir}"/>
  </path>
  
  <path id="worm_like_program.runtime.module.classpath">
    <pathelement location="${worm_like_program.testoutput.dir}"/>
    <pathelement location="${worm_like_program.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.worm_like_program">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.worm_like_program">
    <patternset refid="excluded.from.module.worm_like_program"/>
  </patternset>
  
  <path id="worm_like_program.module.sourcepath">
    <dirset dir="${module.worm_like_program.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.worm_like_program" depends="compile.module.worm_like_program.production,compile.module.worm_like_program.tests" description="Compile module Worm Like Program"/>
  
  <target name="compile.module.worm_like_program.production" depends="register.custom.compilers" description="Compile module Worm Like Program; production classes">
    <mkdir dir="${worm_like_program.output.dir}"/>
    <javac2 destdir="${worm_like_program.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.worm_like_program}/javac">
      <compilerarg line="${compiler.args.worm_like_program}"/>
      <bootclasspath refid="worm_like_program.module.bootclasspath"/>
      <classpath refid="worm_like_program.module.production.classpath"/>
      <src refid="worm_like_program.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.worm_like_program"/>
    </javac2>
    
    <copy todir="${worm_like_program.output.dir}">
      <fileset dir="${module.worm_like_program.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.worm_like_program.tests" depends="register.custom.compilers,compile.module.worm_like_program.production" description="compile module Worm Like Program; test classes" unless="skip.tests"/>
  
  <target name="clean.module.worm_like_program" description="cleanup module">
    <delete dir="${worm_like_program.output.dir}"/>
    <delete dir="${worm_like_program.testoutput.dir}"/>
  </target>
</project>